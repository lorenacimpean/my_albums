<resources>
    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">

        <item name="windowActionBar">true</item>
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_navy</item>
        <item name="colorAccent">@color/app_light_blue</item>
        <item name="colorOnPrimary">@color/app_primary</item>
        <item name="colorError">@color/app_red</item>
        <item name="android:colorBackground">@color/app_white</item>
        <item name="android:statusBarColor">@color/app_primary</item>
        <item name="android:textColor">@color/app_navy</item>

    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_navy</item>
        <item name="colorAccent">@color/app_light_blue</item>
        <item name="android:colorBackground">@color/app_white</item>
        <item name="android:navigationBarColor">@color/app_white</item>
        <item name="colorError">@color/app_red</item>
        <item name="colorOnSurface">@color/app_navy</item>
        <item name="android:statusBarColor">@color/app_white</item>
        <item name="android:textColorPrimary">@color/app_navy</item>

    </style>

    <style name="AppActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">

        <item name="android:colorBackground">@color/app_white</item>
        <item name="android:background">@color/app_white</item>
        <item name="android:textColor">@color/app_navy</item>

    </style>

    <style name="AppTheme.NoActionBar.Launcher" parent="AppTheme.NoActionBar">
        <item name="android:colorBackground">@color/app_white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

        <item name="boxBackgroundColor">@color/app_white</item>
        <item name="android:textColorHint">@color/app_navy</item>
        <item name="errorTextColor">@color/app_red</item>
        <item name="placeholderTextColor">@color/app_navy</item>
        <item name="errorIconTint">@color/app_red</item>
        <item name="endIconTint">@color/app_navy</item>
        <item name="endIconDrawable">@drawable/clear_icon</item>
        <item name="startIconTint">@color/app_navy</item>
        <item name="boxStrokeColor">@color/app_navy</item>
        <item name="boxStrokeErrorColor">@color/app_red</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>

    </style>

</resources>