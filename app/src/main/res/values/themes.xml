<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyAlbums" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryVariant">@color/app_light_blue</item>
        <item name="colorOnPrimary">@color/app_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_dark_grey</item>
        <item name="colorSecondaryVariant">@color/app_red</item>
        <item name="colorOnSecondary">@color/app_navy</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.MyAlbums.Fullscreen" parent="Theme.MyAlbums">
        <item name="android:actionBarStyle">@style/Widget.Theme.MyAlbums.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="generalnotitle" parent="Theme.MyAlbums">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ThemeOverlay.MyAlbums.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>